<main>
  <div class="container">
    <div class="row mt-3">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
        <div id="error_explanation">
          <% if @user.errors.any? %>
          <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li>Name is too short (minimum is 2 characters)</li>
            <% end %>
          </ul>
        <% end %>
        </div>
        
        
        
        <%= form_with model: @user do |f| %>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="user_name">Name</label>
          </div>
          <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control name" %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file user_image" %>  
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction,  class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</main>




